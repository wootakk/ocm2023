@using ISFMOCM_Project.Function
@using ISFMOCM_Project.Entity;
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .navbar-nav > li {
            float: none !important;
            text-align: center;
            border: 1px solid #4896b9;
            margin: 1px;
            border-radius: 5px;
        }

        ul, menu {
            -webkit-padding-start: 0 !important;
        }

        .manage > li > a {
            position: relative;
            display: block;
            padding: 16px 5px;
            margin-right: 30px !important;
        }

            .manage > li > a.manage:hover {
                background-color: none !important;
            }

            .manage > li > a:hover, .manage > li > a:focus {
                text-decoration: none;
                background-color: none !important;
            }

        .manage > li {
            position: relative;
            display: inline-block;
        }

            .manage > li:hover {
                background-color: none;
            }

        .navbar-nav > li > a {
            padding-top: 10px;
            padding-bottom: 10px;
            font-size: 15px !important;
            text-align: center;
        }

        .manage > li {
            float: none !important;
            text-align: center;
            border: none;
            margin: 1px;
            border-radius: 5px;
        }

        p {
            padding: 20px 0 0 0;
        }
    </style>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" href="~/Content/images/ico.gif">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @{ 

        string activeYear = CommonDataModelFunction.GetActiveYear();
    }
</head>
<body>
    <!-- Header - set the background image for the header in the line below -->
    <header class="py-5 bg-image-full">
        <img class="img-fluid d-block mx-auto img-responsive" src="../Content/images/OCM.png" id="bg-cover" alt="">
    </header>

    <div class="row container-home">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">

            @*<h3 class="hometitle">កម្មវិធីគ្រប់គ្រងហិរញ្ញវត្ថុ សម្រាប់ឆ្នាំ @CommonClass.GetKhmerNumber(DateTime.Now.Year.ToString())</h3>*@
            <h3 class="hometitle">កម្មវិធីគ្រប់គ្រងហិរញ្ញវត្ថុ សម្រាប់ឆ្នាំ @CommonClass.GetKhmerNumber(activeYear)</h3>
        </div>
        <div class="col-sm-3">
            @Html.Partial("_LoginPartial")
        </div>
    </div>
    <section class="py-5">
        <div class="container bg-home">
            <div class="row">
                <div class="col-lg-4"></div>
                <div class="col-lg-4">
                    <ul class="nav text-center navbar-nav border-home" style="margin:auto; float:none;">
                        @if (User.IsInRole("Admin") || User.IsInRole("Data Entry"))
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li>@Html.ActionLink("បញ្ចូលឥណទានអនុម័តដើមឆ្នាំ", "ListInitialBudget", "IB")</li>
                                <li>@Html.ActionLink("បញ្ចូលអង្គភាព ឬ អាជ្ញាធរ", "UnitList", "Unit")</li>
                                <li>@Html.ActionLink("ចុះបញ្ជីនិយ័តភាពថវិកា", "TransferList", "Transfer")</li>
                            }
                            <li>@Html.ActionLink("ចុះបញ្ជីសលាកប័ត្រចំណាយថវិកា", "ListFcv", "FCV")</li>
                            <li>@Html.ActionLink("ចុះបញ្ជីអាណត្តិបើកប្រាក់", "ListMandate", "Mandate")</li>
                        }
                        else if (User.IsInRole("Cabinate") || User.IsInRole("Management"))
                        {
                            <li>@Html.ActionLink("បញ្ចូលឥណទានអនុម័តដើមឆ្នាំ", "ListInitialBudget", "IB")</li>
                            <li>@Html.ActionLink("ចុះបញ្ជីសលាកប័ត្រចំណាយថវិកា", "ListFcv", "FCV")</li>
                            <li>@Html.ActionLink("ចុះបញ្ជីអាណត្តិបើកប្រាក់", "ListMandate", "Mandate")</li>
                            <li>@Html.ActionLink("ពិនិត្យរបាយការណ៍", "ReportMenu", "Report")</li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("ពិនិត្យរបាយការណ៍", "ReportMenu", "Report")</li>
                            <li>@Html.ActionLink("តារាង គណនី​អ្នកប្រើប្រាស់", "UserList", "Login")</li>
                        }
                        @if (User.IsInRole("Cabinate"))
                        {
                            <li>@Html.ActionLink("ការចំណាយរជ្ជទេយ្យបុរេប្រទានរដ្ឋបាលរបស់ទីស្ដីការគណៈរដ្ឋមន្ត្រី", "Index", "Expense")</li>
                        }
                    </ul>
                </div>
                <div class="col-lg-4"></div>
            </div>
        </div>
    </section>
    <!-- Footer -->
    <footer class="navbar-fixed-bottom py-5 bg-dark">
        @RenderBody()
        <div class="container">
            <div class="row">

                <div class="col-md-6">
                    <p class="m-0 text-center text-white">ទីស្តីការគណរដ្ឋមន្ត្រី | រក្សាសិទ្ធ &copy; &nbsp; @CommonClass.GetKhmerNumber(DateTime.Now.Year.ToString())</p>
                </div>
                <div class="col-md-6">
                    <p class="f-p">
                        កម្មវិធីនេះរៀបចំដោយៈ បូកគោ តិចណឡជី
                    </p>
                </div>
            </div>
        </div>
        <!-- /.container -->
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/lib")

    @RenderSection("scripts", required: false)
    <script src="~/Scripts/customScript.js"></script>


</body>
</html>
