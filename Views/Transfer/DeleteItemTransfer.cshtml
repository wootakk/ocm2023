@model ISFMOCM_Project.Models.ListTransfer

@{
    ViewBag.Title = "DeleteItemTransfer";
}

<h2>AddTransfer</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="form-group">
                    <div class="col-md-12">
                        <div class="col-md-3">
                            Transfer No:
                        </div>
                        <div class="col-md-9">
                            @Html.DisplayFor(model => model.transfer_no, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-md-offset-3">
                <div class="form-group">
                    <div class="col-md-12">
                        <div class="col-md-3">
                            Transfer Desc:
                        </div>
                        <div class="col-md-9">
                            @Html.DisplayFor(model => model.transfer_desc, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                <div class="col-md-3">
                    Account
                </div>
                <div class="col-md-3">
                    Increase
                </div>
                <div class="col-md-3">
                    Decrease
                </div>
                <div class="col-md-3">
                    Add New
                </div>
            </div>
            <div class="col-md-2">
            </div>
        </div>
        @{
            for (var i = 0; i < Model.Acc_no.Length; i++)
            {
                <div class="row">
                    <div class="col-md-10">
                        <div class="col-md-3">
                            <select class="form-control" id="Acc_no" name="Acc_no">
                                @foreach (ISFMOCM_Project.Models.AccountModel acc in ViewBag.Acc_no)
                                {
                                    if (acc.Acc_no == Model.Acc_no[i])
                                    {
                                        @:
                                        <option value="@acc.Acc_no" selected="selected"> @acc.CodeAndName </option>
                                    }
                                    else
                                    {
                                        @:
                                        <option value="@acc.Acc_no"> @acc.CodeAndName </option>
                                    }

                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            @Html.DisplayFor(model => model.transfer_increase[i])
                        </div>
                        <div class="col-md-3">
                            @Html.DisplayFor(model => model.transfer_decrease[i])
                        </div>
                        <div class="col-md-3">
                            @Html.DisplayFor(model => model.transfer_increase[i])
                        </div>
                    </div>
                    <div class="col-md-2" id="remove"><a class="btn btn-danger">-</a></div>
                </div>
            }
        }
        <div class="col-md-12"></div>
        <div class="col-md-2">
            <a class="btn btn-primary" id="edit_transfer">+</a>
        </div>
        <div class="row">
            <div class="col-md-2">

                @Html.ActionLink("Back to List", "TransferList")  
                <input type="submit" value="Delete" class="btn btn-default" /> |
            </div>
            <div class="col-md-10"></div>
        </div>
    </div>
            }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/DynamicRowScript.js"></script>