@using ReportViewerForMvc;
@model ISFMOCM_Project.Models.AccountModel

@{
    ViewBag.Title = "RPMandate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/style/ReportStyle.css" />
<h2>RPMandate</h2>
@using (Html.BeginForm("RPMandate", "Report", FormMethod.Get))
{
    <div class="form-horizontal">
        <div class="bs-example">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="form-group">
                            <div class="col-lg-12">
                                <div class="col-lg-4">
                                </div>
                                <div class="col-lg-8 right">
                                    <div class="col-md-4"></div>
                                    <div class="col-md-4">@Html.DropDownList("Acc_no", null, htmlAttributes: new { @class = "form-control" })</div>
                                    <div class="col-md-2"><button type="submit" class="btn-search btn btn-primary">Search</button></div>
                                    <div class="col-md-2">@Html.ActionLink("ត្រលប់", "ListReport", "Report", new { @class = "btn-search btn btn-primary pull-left btn btn-default" })</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="panel-body">
                    <div class="text-center">
                        @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer)
                    </div>
                </div>
            </div>
        </div>

    </div>
}